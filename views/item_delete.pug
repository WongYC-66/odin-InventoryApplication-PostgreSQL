extends layout

block content

  h1 #{title}: #{item.name}
  p= item.supplier.name
  p= item.quantity
  p= item.price
  p= item.category.name

  p Do you really want to delete this Item?

  form(method='POST')
    div.form-group
      input#itemId.form-control(type='hidden', name='itemId', value=item._id )

    button.btn.btn-primary(type='submit') Delete
