extends layout

block content

  h1 #{title}: #{supplier.name}
  p= supplier.address
  p= supplier.contact_number
  p= supplier.registration_number

  if supplier_items.length

    p #[strong Delete the following items before attempting to delete this supplier.]
    div(style='margin-left:20px;margin-top:20px')
      h4 Items
      dl
        each item in supplier_items
          div
            a(href=item.url) #{item.name}

  else
    p Do you really want to delete this Supplier?

    form(method='POST')
      div.form-group
        input#supplierId.form-control(type='hidden', name='supplierId', value=supplier._id )

      button.btn.btn-primary(type='submit') Delete
